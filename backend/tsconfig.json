{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "build/js",
    "rootDir": "src",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/interface/*.ts", "node_modules", ".vscode"]
}
